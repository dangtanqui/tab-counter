{
  "manifest_version": 3,
  "name": "Tab Counter",
  "version": "4.0",
  "description": "Professional tab management - Count, search, group, sort, suspend tabs and more",
  "permissions": ["tabs", "storage", "notifications", "tabGroups", "bookmarks"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "incognito": "spanning",
  "commands": {
    "quick-switch": {
      "suggested_key": { "default": "Ctrl+Shift+Q" },
      "description": "Quick switch to recent tab"
    },
    "suspend-tabs": {
      "suggested_key": { "default": "Ctrl+Shift+S" },
      "description": "Suspend inactive tabs"
    },
    "close-duplicates": {
      "suggested_key": { "default": "Ctrl+Shift+D" },
      "description": "Close duplicate tabs"
    },
    "sort-tabs": {
      "description": "Sort tabs by domain"
    }
  }
}
